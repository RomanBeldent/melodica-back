{% extends 'base.html.twig' %}

{% block title %}Address
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between m-3">
		<h2>Adresse # {{ address.id }}</h2>
		<a href="{{ path('back_address_list') }}" class='mb-3 btn btn-secondary'>Retour</a>
	</div>
	<table class="table">
		<tbody>
			<tr>
				<th>#</th>
				<td>{{ address.id }}</td>
			</tr>
			<tr>
				<th>Rue</th>
				<td>{{ address.street }}</td>
			</tr>
			<tr>
				<th>Code postal</th>
				<td>{{ address.zipcode }}</td>
			</tr>
			<tr>
				<th>Ville</th>
				<td>{{ address.city }}</td>
			</tr>
			<tr>
				<th>Département</th>
				<td>{{ address.department }}</td>
			</tr>
		</tbody>
	</table>


	<a href="{{ path('back_address_edit', {'id': address.id}) }}" class='mb-3 btn btn-warning'>Mettre à jour</a>

{{ include('address/_delete_form.html.twig') }}{% endblock %}
