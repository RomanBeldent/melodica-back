{% extends 'base.html.twig' %}

{% block title %}Liste des adresses{% endblock %}

{% block body %}
    <h1>Liste des adresses</h1>

	<table class="table table-dark table-striped">
		<a href="{{ path('back_address_create')}}" class="btn btn-secondary btn-lg active " role="button" aria-pressed="true">Ajouter une nouvelle adresse</a>
        <thead>
            <tr>
                <th>Id</th>
                <th>Street</th>
                <th>Zipcode</th>
                <th>City</th>
                <th>Department</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.street }}</td>
                <td>{{ address.zipcode }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.department }}</td>
                <td>
					<a href="{{ path('back_address_show', {'id': address.id}) }}" class="mr-3 btn btn-outline-info">Read
						<a href="{{ path('back_address_edit', {'id': address.id}) }}" class="mr-3 btn bts-sm btn-warning">Update
							<a href="{{ path('back_address_delete', {'id': address.id}) }}" class="mr-3 btn btn-outline-danger">Delete</td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
