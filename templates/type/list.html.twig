{% extends 'base.html.twig' %}

{% block title %}Liste des types{% endblock %}

{% block body %}
    <h1>Liste des types</h1>

	<table class="table table-dark table-striped">
		<a href="{{ path('back_type_create')}}" class="btn btn-secondary btn-lg active " role="button" aria-pressed="true">Ajouter un nouveau type</a>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id }}</td>
                <td>{{ type.name }}</td>
                <td>
					<a href="{{ path('back_type_show', {'id': type.id}) }}" class="mr-3 btn btn-outline-info">Read
						<a href="{{ path('back_type_edit', {'id': type.id}) }}" class="mr-3 btn bts-sm btn-warning">Update
							<a href="{{ path('back_type_delete', {'id': type.id}) }}" class="mr-3 btn btn-outline-danger">Delete</td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
