{% extends 'base.html.twig' %}

{% block title %}Liste des tags
{% endblock %}

{% block body %}
	<h1 align='center'>Liste des tags</h1>
	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
				{{ message }}
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}
	{% endfor %}
	
		<div class='d-flex justify-content-between'>
			<a href="{{ path('back_index') }}" class="btn btn-secondary btn-lg active m-3">Accueil back
				<a href="{{ path('back_tag_create')}}" class="btn btn-success btn-lg active m-3" role="button" aria-pressed="true">Ajouter un nouveau tag</a>
		</div>
		<table class="table table-dark table-striped">
			<thead>
				<tr class="text-center">
					<th class="col-4" >#</th>
					<th class="col-4">Nom</th>
					<th class="col-4">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for tag in tags %}
					<tr class="text-center">
						<td class="col-4">{{ tag.id }}</td>
						<td class="col-4">{{ tag.name }}</td>
						<td class="col-4">
							<a href="{{ path('back_tag_show', {'id': tag.id}) }}" class="m-1 btn btn-outline-info">Read
								<a href="{{ path('back_tag_edit', {'id': tag.id}) }}" class="m-1 btn btn-outline-warning">Update
									<a href="{{ path('back_tag_delete', {'id': tag.id}) }}" class="m-1 btn btn-outline-danger">Delete</td>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">no records found</td>
							</tr>
						{% endfor %}
					</tr>
				</tbody>
			
		</table>
	{% endblock %}
