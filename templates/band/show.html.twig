{% extends 'base.html.twig' %}

{% block title %}Band{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between m-3">
    <h2>Groupe {{ band.name }}</h2>
    <a href="{{ path('back_band_list') }}" class='mb-3 btn btn-secondary'>Retour</a>
	</div>
	<table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ band.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ band.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ band.description }}</td>
            </tr>
            <tr>
                <th>Zone</th>
                <td>{{ band.area }}</td>
            </tr>
            <tr>
                <th>Echantillon</th>
                <td>{{ band.sample }}</td>
            </tr>
			<tr>
				<th>Image</th>
				<td><a href="{{ asset('uploads/pictures/' ~ band.picture) }}">Voir l'image</a></td>
			</tr>
            <tr>
                <th>Créé le</th>
                <td>{{ band.createdAt ? band.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ band.updatedAt ? band.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

<a href="{{ path('back_band_edit', {'id': band.id}) }}" class='mb-3 btn btn-warning'>Mettre à jour</a>

    {{ include('band/_delete_form.html.twig') }}
{% endblock %}
