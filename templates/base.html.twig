							</ul>
						</li>
					</ul>

				</div>
			</div>
		</nav>

		{# read and display all flash messages #}
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ label }}" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			{% endfor %}
		{% block body %}
		{% endblock %}
		
	</body>
</html>
