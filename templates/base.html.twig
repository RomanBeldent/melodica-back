		<link rel="stylesheet" href="{{ asset('css/melodica.css')}}">
	</head>
	<body class="p-1 mb-2">
	
	<ul class="nav navbar-nav">
						<li class="nav-item dropdown">
							<button class=" dropdown-toggle btn btn-success mb-5" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
								{% if is_granted('IS_AUTHENTICATED_FULLY') %}
									<img src="{{ app.user.picture}}" height="50" alt="Photo de profil">
									<span>{{ app.user.email }}
										(
										{{ app.user.roles[0] }}
										)</span>
								{% endif %}
								<i class="bi bi-person-square"></i>
							</button>	
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" href="#">Profil</a>
								</li>
