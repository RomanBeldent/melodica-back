{% extends 'base.html.twig' %}

{% block title %}Organisateur
	{{ organizer.name }}
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between m-3">
		<h2>Organisateur
			{{ organizer.name }}
		</h2>
		<a href="{{ path('back_organizer_list') }}" class='mb-3 btn btn-secondary'>Retour</a>
	</div>
	<table class="table table-dark table-striped">
		<tbody>
			<tr>
				<th>#</th>
				<td>{{ organizer.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ organizer.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ organizer.description }}</td>
			</tr>
			<tr>
				<th>Site web</th>
				<td>{{ organizer.website }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>
					<a href="{{ asset('uploads/pictures/' ~ organizer.picture) }}">Voir l'image</a>
				</td>
			</tr>
			<tr>
				<th>Site web</th>
				<td>{{ organizer.website }}</td>
			</tr>
			<tr>
				<th>Voie</th>
				<td>{{ organizer.address.street }}</td>
			</tr>
			<tr>
				<th>Code postal</th>
				<td>{{ organizer.address.zipcode }}</td>
			</tr>
			<tr>
				<th>Ville</th>
				<td>{{ organizer.address.city }}</td>
			</tr>
			<tr>
				<th>Créé le</th>
				<td>{{ organizer.createdAt ? organizer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Mise à jour le</th>
				<td>{{ organizer.updatedAt ? organizer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
	<a href="{{ path('back_organizer_edit', {'id': organizer.id}) }}" class='mb-3 btn btn-warning'>Mettre à jour</a>
	{{ include('organizer/_delete_form.html.twig') }}
{% endblock %}
